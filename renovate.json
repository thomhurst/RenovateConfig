{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "repositories": [
        "thomhurst/RenovateConfig",
        "thomhurst/ModularPipelines",
        "thomhurst/BDTest",
        "thomhurst/ReadableTimeSpan",
        "thomhurst/Nupendencies",
        "thomhurst/AllOf",
        "thomhurst/TUnit",
        "thomhurst/EnumerableAsyncProcessor",
        "thomhurst/Selenium.PlaywrightDriver",
        "thomhurst/Selenium.DynamicWaiting",
        "thomhurst/Selenium.BrowserRequestsWaitingWebDriver",
        "thomhurst/PullRequestScanner",
        "thomhurst/ILogger.UnitTest.Verifier",
        "thomhurst/EventMediator",
        "thomhurst/AsyncSemaphore"
    ],
    "dependencyDashboard": true,
    "autodiscover": false,
    "addLabels": [
        "dependencies",
        "renovate-bot"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major"
            ],
            "addLabels": [
                "MAJOR"
            ]
        },
        {
            "matchUpdateTypes": [
                "minor"
            ],
            "addLabels": [
                "MINOR"
            ]
        },
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "addLabels": [
                "PATCH"
            ]
        }
    ]
}
