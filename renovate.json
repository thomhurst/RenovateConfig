{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "repositories": [
        "thomhurst/RenovateConfig",
        "thomhurst/ModularPipelines",
        "thomhurst/BDTest",
        "thomhurst/ReadableTimeSpan",
        "thomhurst/Nupendencies",
        "thomhurst/AllOf",
        "thomhurst/TUnit",
        "thomhurst/EnumerableAsyncProcessor",
        "thomhurst/Selenium.PlaywrightDriver",
        "thomhurst/Selenium.DynamicWaiting",
        "thomhurst/Selenium.BrowserRequestsWaitingWebDriver",
        "thomhurst/PullRequestScanner",
        "thomhurst/ILogger.UnitTest.Verifier",
        "thomhurst/EventMediator",
        "thomhurst/AsyncSemaphore",
        "thomhurst/MicrosoftDependencyInjection.ServiceInitialization"
    ],
    "rebaseWhen": "behind-base-branch",
    "automerge": true,
    "dependencyDashboard": true,
    "autodiscover": false,
    "addLabels": [
        "dependencies",
        "renovate-bot"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major"
            ],
            "addLabels": [
                "MAJOR"
            ]
        },
        {
            "matchUpdateTypes": [
                "minor"
            ],
            "addLabels": [
                "MINOR"
            ]
        },
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "addLabels": [
                "PATCH"
            ]
        },
        {
            "matchPackageNames": [
                "/ModularPipelines/"
            ],
            "groupName": "ModularPipelines"
        },
        {
            "matchPackageNames": [
                "/TUnit/"
            ],
            "groupName": "TUnit"
        },
        {
            "matchPackageNames": [
                "/xUnit/"
            ],
            "groupName": "xUnit"
        },
        {
            "matchPackageNames": [
                "/NUnit/"
            ],
            "groupName": "NUnit"
        },
        {
            "matchPackageNames": [
                "/Sourcy/"
            ],
            "groupName": "Sourcy"
        },
        {
            "matchPackageNames": [
                "/MSTest/"
            ],
            "groupName": "MSTest"
        },
        {
            "matchPackageNames": [
                "/Microsoft.Testing/"
            ],
            "groupName": "Microsoft.Testing"
        },
        {
            "matchPackageNames": [
                "/Microsoft.Build/"
            ],
            "groupName": "Microsoft.Build"
        },
        {
            "matchPackageNames": [
                "/Microsoft.Extensions/"
            ],
            "groupName": "Microsoft.Extensions"
        },
        {
            "matchPackageNames": [
                "/docusaurus/"
            ],
            "groupName": "Docusaurus"
        }, 
        {
            "matchPackageNames": [
                "/Microsoft.CodeAnalysis/"
            ],
            "enabled": false
        }
    ]
}
